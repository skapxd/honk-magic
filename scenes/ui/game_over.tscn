[sub_resource type="GDScript" id="GDScript_game_over"]
script/source = "extends CanvasLayer

# =============================================================================
# HONK MAGIC - Game Over
# =============================================================================
# Pantalla de game over cuando el jugador muere.

signal retry_pressed()
signal menu_pressed()

@onready var panel: PanelContainer = $Panel
@onready var stats_label: Label = $Panel/MarginContainer/VBoxContainer/StatsLabel


func _ready() -> void:
	visible = false
	process_mode = Node.PROCESS_MODE_ALWAYS


func show_game_over(stats: Dictionary = {}) -> void:
	visible = true
	get_tree().paused = true

	# Mostrar estadisticas
	if stats_label:
		var monsters_lost: int = stats.get(\"monsters_lost\", 0)
		var monsters_kept: int = stats.get(\"monsters_kept\", 0)
		var time_played: float = stats.get(\"time_played\", 0.0)

		var time_str: String = \"%02d:%02d\" % [int(time_played) / 60, int(time_played) % 60]
		stats_label.text = \"Tiempo: %s\\nMonstruos perdidos: %d\\nMonstruos en reserva: %d\" % [time_str, monsters_lost, monsters_kept]

	# Animacion de entrada
	panel.modulate.a = 0.0
	panel.scale = Vector2(0.8, 0.8)
	var tween := create_tween()
	tween.set_pause_mode(Tween.TWEEN_PAUSE_PROCESS)
	tween.set_parallel(true)
	tween.tween_property(panel, \"modulate:a\", 1.0, 0.3)
	tween.tween_property(panel, \"scale\", Vector2.ONE, 0.3).set_ease(Tween.EASE_OUT).set_trans(Tween.TRANS_BACK)


func _on_retry_pressed() -> void:
	get_tree().paused = false
	retry_pressed.emit()
	# Recargar escena actual
	get_tree().reload_current_scene()


func _on_menu_pressed() -> void:
	get_tree().paused = false
	menu_pressed.emit()
	SceneTransition.change_scene(\"res://scenes/ui/main_menu.tscn\")
"

