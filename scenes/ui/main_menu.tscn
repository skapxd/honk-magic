[sub_resource type="GDScript" id="GDScript_menu"]
script/source = "extends Control

# =============================================================================
# HONK MAGIC - Main Menu
# =============================================================================

@export var adventure_button: Button
@export var tutorial_button: Button
@export var options_button: Button
@export var debug_button: Button
@export var exit_button: Button
@export var button_container: VBoxContainer

const BUTTON_HOVER_SCALE := Vector2(1.05, 1.05)
const BUTTON_NORMAL_SCALE := Vector2(1.0, 1.0)
const SCALE_DURATION := 0.15

var _buttons: Array[Button] = []

func _ready() -> void:
	_setup_buttons()
	_animate_entrance()


func _setup_buttons() -> void:
	_buttons = [adventure_button, tutorial_button, options_button, debug_button, exit_button]

	for button in _buttons:
		if button:
			button.pivot_offset = button.size / 2
			button.mouse_entered.connect(_on_button_hover.bind(button))
			button.mouse_exited.connect(_on_button_unhover.bind(button))
			button.focus_entered.connect(_on_button_hover.bind(button))
			button.focus_exited.connect(_on_button_unhover.bind(button))


func _animate_entrance() -> void:
	if not button_container:
		return

	# Ocultar botones inicialmente
	for i in range(_buttons.size()):
		var button := _buttons[i]
		if button:
			button.modulate.a = 0.0
			button.position.x -= 50

	# Animar entrada secuencial
	for i in range(_buttons.size()):
		var button := _buttons[i]
		if button:
			var tween := create_tween()
			tween.set_parallel(true)
			tween.tween_property(button, \"modulate:a\", 1.0, 0.3).set_delay(i * 0.1)
			tween.tween_property(button, \"position:x\", button.position.x + 50, 0.3).set_delay(i * 0.1).set_trans(Tween.TRANS_BACK).set_ease(Tween.EASE_OUT)


func _on_button_hover(button: Button) -> void:
	var tween := create_tween()
	tween.tween_property(button, \"scale\", BUTTON_HOVER_SCALE, SCALE_DURATION).set_trans(Tween.TRANS_BACK).set_ease(Tween.EASE_OUT)


func _on_button_unhover(button: Button) -> void:
	var tween := create_tween()
	tween.tween_property(button, \"scale\", BUTTON_NORMAL_SCALE, SCALE_DURATION)


func _on_adventure_pressed() -> void:
	SceneTransition.change_scene(\"res://scenes/ui/save_select.tscn\")


func _on_tutorial_pressed() -> void:
	# TODO: Ir a tutorial (Entregable 13)
	print(\"Tutorial - pendiente Entregable 13\")


func _on_options_pressed() -> void:
	SceneTransition.change_scene(\"res://scenes/ui/options_menu.tscn\")


func _on_debug_pressed() -> void:
	SceneTransition.change_scene(\"res://scenes/debug/debug_menu.tscn\")


func _on_exit_pressed() -> void:
	# Pequeña animación antes de salir
	var tween := create_tween()
	tween.tween_property(self, \"modulate:a\", 0.0, 0.3)
	await tween.finished
	get_tree().quit()
"

