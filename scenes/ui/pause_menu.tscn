[sub_resource type="GDScript" id="GDScript_pause"]
script/source = "extends CanvasLayer

# =============================================================================
# HONK MAGIC - Pause Menu
# =============================================================================
# MenÃº de pausa que detiene el juego.

signal resumed()
signal quit_to_menu()

var is_paused: bool = false

@onready var panel: PanelContainer = $Panel


func _ready() -> void:
	visible = false
	process_mode = Node.PROCESS_MODE_ALWAYS


func _input(event: InputEvent) -> void:
	if event.is_action_pressed(\"pause\"):
		if is_paused:
			resume()
		else:
			pause()


func pause() -> void:
	if is_paused:
		return

	is_paused = true
	visible = true
	get_tree().paused = true

	# Animacion de entrada
	panel.modulate.a = 0.0
	panel.scale = Vector2(0.9, 0.9)
	var tween := create_tween()
	tween.set_pause_mode(Tween.TWEEN_PAUSE_PROCESS)
	tween.set_parallel(true)
	tween.tween_property(panel, \"modulate:a\", 1.0, 0.15)
	tween.tween_property(panel, \"scale\", Vector2.ONE, 0.15).set_ease(Tween.EASE_OUT)


func resume() -> void:
	if not is_paused:
		return

	is_paused = false
	get_tree().paused = false

	var tween := create_tween()
	tween.tween_property(panel, \"modulate:a\", 0.0, 0.1)
	tween.tween_callback(func(): visible = false)

	resumed.emit()


func _on_continue_pressed() -> void:
	resume()


func _on_options_pressed() -> void:
	# Por ahora solo muestra un mensaje
	print(\"[PauseMenu] Opciones no implementadas en pausa\")


func _on_main_menu_pressed() -> void:
	get_tree().paused = false
	is_paused = false
	quit_to_menu.emit()
	SceneTransition.change_scene(\"res://scenes/ui/main_menu.tscn\")
"

