[sub_resource type="GDScript" id="GDScript_title"]
script/source = "extends Control

# =============================================================================
# HONK MAGIC - Title Screen
# =============================================================================

@export var title_label: Label
@export var subtitle_label: Label
@export var prompt_label: Label

var _pulse_tween: Tween

func _ready() -> void:
	_setup_labels()
	_start_prompt_animation()


func _setup_labels() -> void:
	if title_label:
		title_label.text = tr(\"GAME_TITLE\")

	if subtitle_label:
		subtitle_label.text = tr(\"GAME_SUBTITLE\")

	if prompt_label:
		prompt_label.text = tr(\"TITLE_PRESS_ANY_KEY\")
		prompt_label.modulate.a = 0.0


func _start_prompt_animation() -> void:
	if not prompt_label:
		return

	# Fade in inicial
	var fade_in := create_tween()
	fade_in.tween_property(prompt_label, \"modulate:a\", 1.0, 1.0)
	fade_in.set_delay(0.5)

	# Pulso continuo
	await fade_in.finished
	_pulse_prompt()


func _pulse_prompt() -> void:
	if not prompt_label:
		return

	_pulse_tween = create_tween()
	_pulse_tween.set_loops()
	_pulse_tween.tween_property(prompt_label, \"modulate:a\", 0.4, 1.0)
	_pulse_tween.tween_property(prompt_label, \"modulate:a\", 1.0, 1.0)


func _input(event: InputEvent) -> void:
	if event is InputEventKey or event is InputEventMouseButton:
		if event.pressed:
			_go_to_menu()


func _go_to_menu() -> void:
	if _pulse_tween:
		_pulse_tween.kill()

	# Deshabilitar input para evitar m√∫ltiples transiciones
	set_process_input(false)
	SceneTransition.change_scene(\"res://scenes/ui/main_menu.tscn\")
"

